                } else {
                  return 'call-service'; // Enable service call
                }
              ]]]
            service: script.turn_on
            service_data:
              entity_id: script.child4_chore_04_pending_completion
          hold_action:
            action: none
          name: Chore 04
          icon: |
            [[[ 
              if (states['input_boolean.child4_chore_04_enabled'].state === 'off') {
                return 'mdi:close';
              } else if (states['input_boolean.child4_chore_04_pending'].state === 'off' && 
                         states['input_boolean.child4_chore_04_completed'].state === 'off') {
                return 'mdi:file-document-outline';
              } else if (states['input_boolean.child4_chore_04_pending'].state === 'on' && 
                         states['input_boolean.child4_chore_04_completed'].state === 'off') {
                return 'mdi:file-document-alert-outline';
              } else if (states['input_boolean.child4_chore_04_pending'].state === 'on' && 
                         states['input_boolean.child4_chore_04_completed'].state === 'on') {
                return 'mdi:file-document-check-outline';
