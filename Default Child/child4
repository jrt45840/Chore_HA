            [[[ 
              if (states['input_boolean.child4_chore_25_enabled'].state === 'off') {
                return 'mdi:close';
              } else if (states['input_boolean.child4_chore_25_pending'].state === 'off' && 
                         states['input_boolean.child4_chore_25_completed'].state === 'off') {
                return 'mdi:file-document-outline';
              } else if (states['input_boolean.child4_chore_25_pending'].state === 'on' && 
                         states['input_boolean.child4_chore_25_completed'].state === 'off') {
                return 'mdi:file-document-alert-outline';
              } else if (states['input_boolean.child4_chore_25_pending'].state === 'on' && 
                         states['input_boolean.child4_chore_25_completed'].state === 'on') {
                return 'mdi:file-document-check-outline';
              } else {
                return 'mdi:alert'; // Default icon for unexpected cases
