            label_top: |
              [[[ 
                return states['input_text.child4_chore_40_chore'].state;
              ]]]
            label_bottom: |
              [[[ 
                return parseInt(states['input_number.child4_chore_40_chore_value'].state) + ' pts';
              ]]]
            days_row: |
              [[[ 
                let days = {
                  Sun: states['input_boolean.child4_chore_40_sunday'].state,
                  Mon: states['input_boolean.child4_chore_40_monday'].state,
                  Tue: states['input_boolean.child4_chore_40_tuesday'].state,
