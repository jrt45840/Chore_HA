                  Fri: states['input_boolean.child4_chore_25_friday'].state,
                  Sat: states['input_boolean.child4_chore_25_saturday'].state
                };
                return Object.entries(days).map(([key, value]) =>
                  `<span style="color: ${value === 'on' ? 'green' : 'red'}">${key}</span>`).join(' ');
