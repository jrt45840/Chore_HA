          show_icon: true
          show_state: false
          tap_action:
            action: |
              [[[ 
                if (states['input_boolean.child4_chore_22_pending'].state === 'on' || 
                    states['input_boolean.child4_chore_22_completed'].state === 'on') {
                  return 'none'; // Disable tap action
                } else {
                  return 'call-service'; // Enable service call
                }
              ]]]
            service: script.turn_on
            service_data:
              entity_id: script.child4_chore_22_pending_completion
          hold_action:
            action: none
          name: Chore 22
          icon: |
            [[[ 
              if (states['input_boolean.child4_chore_22_enabled'].state === 'off') {
                return 'mdi:close';
              } else if (states['input_boolean.child4_chore_22_pending'].state === 'off' && 
                         states['input_boolean.child4_chore_22_completed'].state === 'off') {
                return 'mdi:file-document-outline';
              } else if (states['input_boolean.child4_chore_22_pending'].state === 'on' && 
                         states['input_boolean.child4_chore_22_completed'].state === 'off') {
                return 'mdi:file-document-alert-outline';
              } else if (states['input_boolean.child4_chore_22_pending'].state === 'on' && 
                         states['input_boolean.child4_chore_22_completed'].state === 'on') {
                return 'mdi:file-document-check-outline';
              } else {
                return 'mdi:alert'; // Default icon for unexpected cases
              }
            ]]]
          custom_fields:
            label_top: |
              [[[ 
                return states['input_text.child4_chore_22_chore'].state;
              ]]]
            label_bottom: |
              [[[ 
                return parseInt(states['input_number.child4_chore_22_chore_value'].state) + ' pts';
              ]]]
            days_row: |
              [[[ 
                let days = {
                  Sun: states['input_boolean.child4_chore_22_sunday'].state,
                  Mon: states['input_boolean.child4_chore_22_monday'].state,
                  Tue: states['input_boolean.child4_chore_22_tuesday'].state,
                  Wed: states['input_boolean.child4_chore_22_wednesday'].state,
                  Thr: states['input_boolean.child4_chore_22_thursday'].state,
                  Fri: states['input_boolean.child4_chore_22_friday'].state,
                  Sat: states['input_boolean.child4_chore_22_saturday'].state
                };
                return Object.entries(days).map(([key, value]) =>
                  `<span style="color: ${value === 'on' ? 'green' : 'red'}">${key}</span>`).join(' ');
              ]]]
