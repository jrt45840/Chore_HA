            label_top: |
              [[[ 
                return states['input_text.child4_chore_25_chore'].state;
              ]]]
            label_bottom: |
              [[[ 
                return parseInt(states['input_number.child4_chore_25_chore_value'].state) + ' pts';
              ]]]
            days_row: |
              [[[ 
                let days = {
                  Sun: states['input_boolean.child4_chore_25_sunday'].state,
                  Mon: states['input_boolean.child4_chore_25_monday'].state,
                  Tue: states['input_boolean.child4_chore_25_tuesday'].state,
                  Wed: states['input_boolean.child4_chore_25_wednesday'].state,
